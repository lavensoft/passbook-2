{
   "compilerOptions": {
     "target": "esnext",
     "module": "commonjs",
     "lib": ["es6"],
     "jsx": "react-native",
     "noEmit": true,
     "isolatedModules": true,
     "strict": true,
     "moduleResolution": "node",
     "baseUrl": "./src",
     "paths": {
       "@hooks": ["hooks"],
       "@hooks/*": ["hooks/*"],
       "@components": ["components"],
       "@components/*": ["components/*"],
       "@functions": ["functions"],
       "@functions/*": ["functions/*"],
       "@styles": ["styles"],
       "@styles/*": ["styles/*"],
       "@screens": ["screens"],
       "@screens/*": ["screens/*"],
       "@utils": ["utils"],
       "@utils/*": ["utils/*"],
       "@config": ["config"],
       "@config/*": ["config/*"],
       "@navigation": ["navigation"],
       "@navigation/*": ["navigation/*"],
       "@assets": ["assets"],
       "@assets/*": ["assets/*"],
       "@api" : ["api"],
       "@api/*" : ["api/*"],
       "@socket" : ["socket"],
       "@socket/*" : ["socket/*"]
     },
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "skipLibCheck": true
   },
   "exclude": [
     "node_modules",
     "babel.config.js",
     "metro.config.js",
     "jest.config.js"
   ]
}